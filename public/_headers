# Netlify headers for cache control
# Prevent caching of index.html to ensure users get latest version
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Allow caching of hashed assets (they have unique names per build)
/assets/*
  Cache-Control: public, max-age=31536000, immutable
